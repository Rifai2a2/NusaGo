<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/purple_700">


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="430dp"
    android:scaleType="centerCrop"
    android:layout_centerHorizontal="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="410dp"
        android:layout_height="430dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bromo"
        android:contentDescription="@string/title_home" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:gravity="left|top"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:lineHeight="43.65dp"
        android:text="Gunung Bromo"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        tools:text="Gunung Bromo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="317dp"
        android:gravity="left|top"
        android:includeFontPadding="false"
        android:lineHeight="22.99dp"
        android:text="Rating"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        tools:text="Rating" />

    <FrameLayout
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="345dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <com.nusago.ui.round.CodiaRoundImageView
            android:layout_width="86dp"
            android:layout_height="44dp"
            android:layout_gravity="top|left"
            android:background="@drawable/drawable_shape_1"
            android:scaleType="centerInside"
            app:radius="20dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="12dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="22.99dp"
            android:text="4.8"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold"
            tools:text="4.8" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerInside"
            android:src="@drawable/star" />
    </FrameLayout>

    <ImageView
        android:id="@+id/maps"
        android:layout_width="38.98dp"
        android:layout_height="50dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="330dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/map" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ivFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/ic_favorite" />
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scaleType="centerCrop"
        app:cardCornerRadius="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="9dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="22.99dp"
            android:text="Description"
            android:textColor="#FF000000"
            android:textSize="19dp"
            android:textStyle="bold"
            tools:text="Description" />
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="35dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="22.99dp"
            android:text="Description"
            android:textColor="#FF000000"
            android:textSize="19dp"
            android:textStyle="bold"
            tools:text="Description" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="390dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="22.99dp"
            android:text="Description"
            android:textColor="#FF000000"
            android:textSize="19dp"
            android:textStyle="bold"
            tools:text="Open" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="420dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.nusago.ui.round.CodiaRoundImageView
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_gravity="top|left"
                android:background="@drawable/drawable_shape_1"
                android:scaleType="centerInside"
                app:radius="20dp" />

            <TextView
                android:id="@+id/tvOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="08:00 - 18:00 WIB"
                android:textColor="#FF000000"
                android:textSize="11dp"
                android:textStyle="bold"
                tools:text="08:00 - 18:00 WIB" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:scaleType="centerInside"
                android:src="@drawable/clock" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>